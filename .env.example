# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=https://pullcass.com

# Database Settings
DB_HOST=mysql
DB_DATABASE=pullcass
DB_USERNAME=pullcass
DB_PASSWORD=secret
DB_PORT=3306

# Mail（予約通知メールの送信元）
# 未設定時はテナントの domain があれば noreply@(テナントドメイン)、なければ noreply@pullcass.com を使用。
# MAIL_FROM="店名 <noreply@yourdomain.com>"

# Mail SMTP（MAIL_HOST を設定すると SMTP で送信される）

# Xserver を使う場合:
# MAIL_HOST=sv*****.xserver.jp
# MAIL_PORT=587
# MAIL_USERNAME=メールアドレス@yourdomain.com
# MAIL_PASSWORD=（メールアカウントのパスワード）
# MAIL_ENCRYPTION=tls

# AWS SES を使う場合:
# MAIL_HOST=email-smtp.ap-northeast-1.amazonaws.com
# MAIL_PORT=587
# MAIL_USERNAME=（SES SMTP ユーザー名）
# MAIL_PASSWORD=（SES SMTP パスワード）
# MAIL_ENCRYPTION=tls
